<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="image"
            type="com.example.comik.data.model.Image" />
    </data>

    <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
